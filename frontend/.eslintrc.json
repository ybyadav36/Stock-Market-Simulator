{
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    },
    "rules": {
      "react/jsx-no-undef": [
        2,
        {
          "allowGlobals": true
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }